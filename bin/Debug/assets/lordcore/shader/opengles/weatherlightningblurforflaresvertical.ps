#version 100
precision mediump float;

//后处理源贴图
uniform sampler2D texSampler;
//render target size
uniform vec2 RTSize;
//UV
varying mediump vec2 texCoord;

void main()
{
	mediump vec2 texelSize = vec2(1.0 / RTSize);
	mediump vec4 color = texture2D(texSampler, texCoord);
	color += texture2D(texSampler, texCoord + texelSize * vec2(0.0, -1.5));	
	color += texture2D(texSampler, texCoord + texelSize * vec2(0.0, -0.5));
	color += texture2D(texSampler, texCoord + texelSize * vec2(0.0, 0.5));	
	color += texture2D(texSampler, texCoord + texelSize * vec2(0.0, 1.5));	
	gl_FragColor = color * 0.25;
}