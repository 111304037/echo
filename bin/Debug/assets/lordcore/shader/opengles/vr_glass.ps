#version 100


uniform sampler2D Texture0;
uniform mediump float EyesOffset;

varying mediump vec4 oColor;
varying mediump vec2 oTexCoord0;
varying mediump vec2 oTexCoord1;
varying mediump vec2 oTexCoord2;


void main(void)
{

	mediump float ResultR = texture2D(Texture0, vec2(oTexCoord0.x*0.5+EyesOffset,oTexCoord0.y)).r;
	mediump float ResultG = texture2D(Texture0, vec2(oTexCoord1.x*0.5+EyesOffset,oTexCoord1.y)).g;
	mediump float ResultB = texture2D(Texture0, vec2(oTexCoord2.x*0.5+EyesOffset,oTexCoord2.y)).b;
	mediump vec3 newColor = vec3(ResultR * oColor.r, ResultG * oColor.g, ResultB * oColor.b);

	gl_FragColor = vec4(newColor, 1.0);
}