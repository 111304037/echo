#version 100

precision mediump float;

#include <hdr_ldr.inc>

uniform sampler2D texSampler;

uniform mediump vec2 RTSize;

uniform mediump float bright;

varying mediump vec2 texCoord;


void main(void)
{
	mediump vec4 color = vec4(0.0, 0.0, 0.0, 0.0);
	
	for( int i = 0; i < 5; i++ )
	{
		color += texture2d_ldr2hdr( texSampler, texCoord + vec2(0, (float(i)-2.0) / RTSize.y)) * 0.10 * bright;
	}
	
	gl_FragColor = vec4( color.rgb, 1.0 );
	
	gl_FragColor = hdr2ldr(gl_FragColor);
}

