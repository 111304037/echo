#version 100
precision mediump float;
#include <tonemapping.inc>

uniform sampler2D texSamplerSrc0;
uniform sampler2D texSamplerSrc1;

varying vec2 texCoord;

void main(void)
{
	vec4 color = vec4(0.0, 0.0, 0.0, 0.0);
	color += texture2D(texSamplerSrc0, texCoord) * 0.5;
	color += texture2D(texSamplerSrc1, texCoord) * 0.5;
	
	gl_FragColor = vec4(color.rgb, 1.0);
}
