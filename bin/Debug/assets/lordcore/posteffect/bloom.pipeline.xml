<?xml version='1.0' encoding='utf-8' ?>
<pipeline>
	<RenderTarget id="BrightPass" material="pp_BrigthPass.xml" width="" height="" scale="0.5">
		<BindBuffer sampler="texSampler" sourceRT="" slot="0" />
		<Uniform name="brightThresholdValue" x="0.5" />
	</RenderTarget>
	<RenderTarget id="HBlur" material="pp_GaussianHBlur.xml" width="" height="" scale="0.25">
		<BindBuffer sampler="texSampler" sourceRT="BrightPass" slot="0" />
		<Uniform name="mean" x="0" />
		<Uniform name="dev" x="0.8" />
		<Uniform name="multiplier" x="0.43" />
	</RenderTarget>
	<RenderTarget id="VBlur" material="pp_GaussianVBlur.xml" width="" height="" scale="0.25">
		<BindBuffer sampler="texSampler" sourceRT="HBlur" slot="0" />
		<Uniform name="mean" x="0" />
		<Uniform name="dev" x="0.8" />
		<Uniform name="multiplier" x="0.43" />
	</RenderTarget>
	<RenderTarget id="Composite" material="pp_LDRComposition_s.xml" width="" height="" scale="1">
		<BindBuffer sampler="sceneColorSampler" sourceRT="" slot="0" />
		<BindBuffer sampler="sceneBloomSampler" sourceRT="VBlur" slot="1" />
		<Uniform name="intensity" x="0.5" />
	</RenderTarget>
</pipeline>

