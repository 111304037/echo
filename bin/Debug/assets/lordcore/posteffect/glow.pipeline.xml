<?xml version='1.0' encoding='utf-8' ?>
<pipeline>
	<RenderTarget id="GlowHBlur" material="pp_GaussianHBlur.xml" width="256" height="256" scale="1" >
	<!-- RenderTarget id="GlowHBlur" material="pp_GaussianHBlur.xml" width="" height="" scale="0.125" -->
		<BindBuffer sampler="texSampler" sourceRT="RTI_Glow" slot="0" />
		<Uniform name="mean" x="0" />
		<Uniform name="dev" x="0.8" />
		<Uniform name="multiplier" x="0.43" />
	</RenderTarget>
	<RenderTarget id="GlowVBlur" material="pp_GaussianVBlur.xml" width="256" height="256" scale="1" >
	<!-- RenderTarget id="GlowVBlur" material="pp_GaussianVBlur.xml" width="" height="" scale="0.125" -->
		<BindBuffer sampler="texSampler" sourceRT="GlowHBlur" slot="0" />
		<Uniform name="mean" x="0" />
		<Uniform name="dev" x="0.8" />
		<Uniform name="multiplier" x="0.83" />
	</RenderTarget>
	<RenderTarget id="RTI_DefaultBackBuffer" material="glow_ldrcomposition.xml" width="" height="" scale="1">
		<BindBuffer sampler="sceneColorSampler" sourceRT="PBRPass" slot="0" />
		<BindBuffer sampler="glowSampler" sourceRT="GlowVBlur" slot="1" />
	</RenderTarget>
</pipeline>

