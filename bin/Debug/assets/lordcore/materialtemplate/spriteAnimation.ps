#version 100
precision highp float;

uniform sampler2D SA_sampler;
varying vec2  SA_inTexCoord;

#ifdef TRANSPARENT
	uniform mediump float AlphaValue;
#endif

void main ()
{
	vec4 sa_color = texture2D(SA_sampler, SA_inTexCoord);
	gl_FragColor = vec4(sa_color.rgb, 1.0);

	#ifdef TRANSPARENT
		gl_FragColor.a = AlphaValue * sa_color.a;
	#else
		gl_FragColor.a = sa_color.a;
	#endif
}

